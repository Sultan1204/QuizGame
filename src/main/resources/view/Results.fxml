<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sultan.quiz.controller.ResultsController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Results" styleClass="view-title"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colPlayer" text="Player" prefWidth="200"/>
                <TableColumn fx:id="colCorrect" text="Correct" prefWidth="100"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                <TableColumn fx:id="colDate" text="Date (ISO-8601)" prefWidth="220"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <Button fx:id="btnPlayAgain" text="Play Again" styleClass="primary"/>
            <Button fx:id="btnBack" text="Back to Menu"/>
        </HBox>
    </bottom>

    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
</BorderPane>
