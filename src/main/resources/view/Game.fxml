<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sultan.quiz.controller.GameController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label fx:id="lblTitle" styleClass="view-title"/>
            <Label fx:id="lblScore" styleClass="score-pill"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="16">
            <TitledPane text="Player" expanded="true">
                <content>
                    <HBox spacing="8">
                        <TextField fx:id="txtPlayerName" promptText="Enter your name"/>
                        <Button fx:id="btnBegin" text="Begin"/>
                    </HBox>
                </content>
            </TitledPane>

            <TitledPane text="Timer" expanded="true">
                <content>
                    <VBox spacing="8">
                        <Label fx:id="lblTimer"/>
                        <ProgressBar fx:id="progress" prefWidth="400"/>
                    </VBox>
                </content>
            </TitledPane>

            <TitledPane text="Question" expanded="true">
                <content>
                    <VBox fx:id="questionArea" spacing="8"/>
                </content>
            </TitledPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8">
            <Button fx:id="btnFinish" text="Finish Quiz" disable="true" styleClass="primary"/>
        </HBox>
    </bottom>

    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
</BorderPane>
